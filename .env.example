# Application Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=sa3d
DB_PASSWORD=sa3d_password
DB_NAME=sa3d_db
DB_SSL_MODE=disable

# TimescaleDB Configuration
TSDB_HOST=localhost
TSDB_PORT=5433
TSDB_USER=sa3d_metrics
TSDB_PASSWORD=metrics_password
TSDB_NAME=sa3d_metrics

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=sa3d-services
KAFKA_TOPIC_ANALYSIS=analysis-events
KAFKA_TOPIC_METRICS=metrics-events
KAFKA_TOPIC_COLLABORATION=collaboration-events

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=sa3d-storage

# Service Ports
API_GATEWAY_PORT=8080
ANALYSIS_SERVICE_PORT=8081
VISUALIZATION_SERVICE_PORT=8082
COLLABORATION_SERVICE_PORT=8083
METRICS_SERVICE_PORT=8084

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# OAuth2 Configuration (optional)
OAUTH2_CLIENT_ID=
OAUTH2_CLIENT_SECRET=
OAUTH2_REDIRECT_URL=

# Monitoring
PROMETHEUS_ENDPOINT=:9100
JAEGER_ENDPOINT=localhost:6831

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Analysis Configuration
MAX_FILE_SIZE_MB=100
MAX_PROJECT_SIZE_GB=10
ANALYSIS_TIMEOUT_MINUTES=30
WORKER_POOL_SIZE=0  # 0 = auto-detect based on CPU cores

# WebSocket Configuration
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_MAX_MESSAGE_SIZE=512000  # 500KB